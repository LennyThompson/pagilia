extends layout

block content
    h1 Actors
    h2 List of Actors
    table#actors.table.table-hover.table-striped.table-bordered
        thead.thead-default
            tr
                th
                th First Name
                th Last Name
                th Select...
        tbody
            each actor, index in actors
                - var query = "first_name=" + actor.first_name + "&last_name=" + actor.last_name
                tr
                    td #{index + 1}
                    td #{actor.first_name}
                    td #{actor.last_name}
                    td
                        a(href="actors?" + query) Details...
